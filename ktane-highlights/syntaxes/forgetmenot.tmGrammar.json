{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "text.ktane.forgetmenot",
	"patterns": [
		{ "include": "#heading1" },
		{ "include": "#heading2" }
	],
	"repository": {
		"heading1": {
			"name": "markup.heading.part",
			"match": "^ [\\d ]+[^\\w\\s]$"
		},
		"heading2": {
			"name": "markup.heading",
			"match": "^(?:\\d[\\d ]+[^\\w\\s]$|#.*)"
		}
	}
}
